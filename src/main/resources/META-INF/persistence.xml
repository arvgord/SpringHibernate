<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="xyz.prodes.springhibernate.jpa">
        <class>xyz.prodes.springhibernate.entities.user.Doctor</class>
        <class>xyz.prodes.springhibernate.entities.user.AbstractUser</class>
        <class>xyz.prodes.springhibernate.entities.Treatment</class>
        <class>xyz.prodes.springhibernate.entities.Prescription</class>
        <class>xyz.prodes.springhibernate.entities.Patient</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hospital"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
